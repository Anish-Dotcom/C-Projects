#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

int main() {
  bool game = true;
  bool guessing = true;
  while(game == true) { //Loops till the game is over
    srand(time(NULL)); //Sets the seed for the random number generator
    int random =   rand() % 101; //Generates random number
    int input = 0;
    int guesses = 1

      ;
    cout << random <<endl;
    guessing = true;
    while(guessing) {
      cin >> input; //Takes input
      if(random == input) {//Compares input to random number
	cout << "You won!" << endl;
	cout << "Number of guesses: " << guesses << endl; 
	cout << "Play again? y/n" << endl;
	char choice = 'y';
	cin >> choice;//Takes choice
	if(choice =='n') {
	  game = false;//Ends game
	}
	guessing = false;
	cout << endl;
      }
      else if(input < random) {//If the rna
	guesses++;
	cout << "Too low" << endl;
	cout << endl;
      }
      else if (input > random) {
	guesses++;
	cout << "Too high" << endl;
	cout << endl;
      }
    }
  }
  return 0;
}
